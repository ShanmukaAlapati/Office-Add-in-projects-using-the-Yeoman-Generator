{
  "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.17/MicrosoftTeams.schema.json",
  "manifestVersion": "1.17",
  "version": "1.0.0",
  "id": "4cfd96e9-efb5-4558-b42c-7717b11232cf",

  "localizationInfo": {
    "defaultLanguageTag": "en-us",
    "additionalLanguages": []
  },

  "developer": {
    "name": "Contoso",
    "websiteUrl": "https://www.contoso.com",
    "privacyUrl": "https://www.contoso.com/privacy",
    "termsOfUseUrl": "https://www.contoso.com/servicesagreement"
  },    

  "name": {
    "short": "Basic Office Add-in- online",
    "full": "Contoso Task Pane Add-in"
  },

  "description": {
    "short": "Gets gists.",
    "full": "Allows users to access their GitHub gists."
  },

  "icons": {
    "outline": "assets/outline.png",
    "color": "assets/color.png"
  },

  "accentColor": "#230201",

  "validDomains": [
    "contoso.com",
    "office-add-in-projects-using-the-yeoman.onrender.com"
  ],

  "authorization": {
    "permissions": {
      "resourceSpecific": [
        {
          "name": "MailboxItem.Read.User",
          "type": "Delegated"
        }
      ]
    }
  },

  "extensions": [
    {
      "requirements": {
        "capabilities": [
          {
            "name": "Mailbox",
            "minVersion": "1.3"
          }
        ],
        "scopes": ["mail"]
      },

      "runtimes": [
        {
          "id": "TaskPaneRuntime",
          "type": "general",
          "lifetime": "short",

          "requirements": {
            "capabilities": [
              {
                "name": "Mailbox",
                "minVersion": "1.3"
              }
            ]
          },

          "code": {
            "page": "https://office-add-in-projects-using-the-yeoman.onrender.com/taskpane.html"
          },

          "actions": [
            {
              "id": "TaskPaneRuntimeShow",
              "type": "openPage",
              "view": "dashboard",
              "pinnable": false
            }
          ]
        },

        {
          "id": "CommandsRuntime",
          "type": "general",
          "lifetime": "short",

          "code": {
            "page": "https://office-add-in-projects-using-the-yeoman.onrender.com/commands.html",
            "script": "https://office-add-in-projects-using-the-yeoman.onrender.com/commands.js"
          },

          "actions": [
            {
              "id": "action",
              "type": "executeFunction"
            }
          ]
        }
      ],

      "ribbons": [
        {
          "contexts": ["mailRead"],

          "tabs": [
            {
              "id": "CustomTab",
              "label": "Contoso",

              "groups": [
                {
                  "id": "msgReadGroup",
                  "label": "Contoso Add-in",

                  "icons": [
                    {
                      "size": 16,
                      "url": "https://office-add-in-projects-using-the-yeoman.onrender.com/assets/icon-16.png"
                    },
                    {
                      "size": 32,
                      "url": "https://office-add-in-projects-using-the-yeoman.onrender.com/assets/icon-32.png"
                    },
                    {
                      "size": 80,
                      "url": "https://office-add-in-projects-using-the-yeoman.onrender.com/assets/icon-80.png"
                    }
                  ],

                  "controls": [
                    {
                      "id": "msgReadOpenPaneButton",
                      "type": "button",
                      "label": "Show Task Pane",

                      "icons": [
                        {
                          "size": 16,
                          "url": "https://office-add-in-projects-using-the-yeoman.onrender.com/assets/icon-16.png"
                        },
                        {
                          "size": 32,
                          "url": "https://office-add-in-projects-using-the-yeoman.onrender.com/assets/icon-32.png"
                        },
                        {
                          "size": 80,
                          "url": "https://office-add-in-projects-using-the-yeoman.onrender.com/assets/icon-80.png"
                        }
                      ],

                      "supertip": {
                        "title": "Show Task Pane",
                        "description": "Opens a pane displaying all available properties."
                      },

                      "actionId": "TaskPaneRuntimeShow"
                    },

                    {
                      "id": "ActionButton",
                      "type": "button",
                      "label": "Perform an action",

                      "icons": [
                        {
                          "size": 16,
                          "url": "https://office-add-in-projects-using-the-yeoman.onrender.com/assets/icon-16.png"
                        },
                        {
                          "size": 32,
                          "url": "https://office-add-in-projects-using-the-yeoman.onrender.com/assets/icon-32.png"
                        },
                        {
                          "size": 80,
                          "url": "https://office-add-in-projects-using-the-yeoman.onrender.com/assets/icon-80.png"
                        }
                      ],

                      "supertip": {
                        "title": "Perform an action",
                        "description": "Perform an action when clicked."
                      },

                      "actionId": "action"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
